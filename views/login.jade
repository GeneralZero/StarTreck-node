extends layout

block content
	if user
		div.welcomebox
			// Filtered inline output
			p.
				Welcome, #{user.name}
	else
		div.loginbox
			form(name="login", action="/login", method="post")
				label(for="name") Username
				input(type="text", name="user") 
				label(for="password") Password
				input(type="password", name="password") 
				input(type="submit", value="login")