extends layout

block content
	if user
		div.welcomebox
			// Filtered inline output
			p.
				Welcome, #{user.name}
	else
		form(class="form-horizontal", name="login", action='/login', method="post")
			.control-group
				label.control-label(for='user') Username
				.controls
					input#inputEmail(type='text', name="user", placeholder='Email')
			.control-group
				label.control-label(for='password') Password
				.controls
					input#inputPassword(type='password', name="password", placeholder='Password')
			.control-group
				button.btn(type='submit') Sign in